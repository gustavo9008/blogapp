<%- include("partials/header") %>

<div class="login-form-card w-full flex justify-center items-center">
    <!-- ===== modal conatainer ===== -->
    <div class="bg-gray-900 border-2 border-gray-500 rounded modal">
      <!-- ===== modal header ===== -->
      <div class="border-b px-4 py-2 flex justify-between items-center">
        <div>
          <span class="text-sm">
            Remembered your password?
          </span>
          <a href="/blogs/login" class="text-sm text-blue-300 hover:text-blue-400 font-semibold">
            Log in
          </a>
        </div>
      </div>
      <!-- ===== modal body ===== -->
      <div class="p-3">
        <!-- ===== Form to login ===== -->

        <form method="POST" action="/reset/<%= token%>">
          <h2 class=" text-2xl font-bold">Enter new Password</h2>

          <div class="mb-4 mt-6">
            <label for="password">New password</label>
            <input class="text-sm appearance-none rounded w-full py-2 px-3 text-gray-700 bg-gray-200 leading-tight focus:outline-none focus:shadow-outline h-10" id="password" type="password" name="password" placeholder="enter new password"/>
          </div>
          <div class="mb-4 mt-6">
            <label for="confirm">Confirm password</label>
            <input class="text-sm appearance-none rounded w-full py-2 px-3 text-gray-700 bg-gray-200 leading-tight focus:outline-none focus:shadow-outline h-10" id="password" type="password" name="confirm" placeholder="Confirm Password"/>
          </div>
          <div class="flex w-full mt-8">
            <button class="w-full bg-gray-800 hover:bg-grey-900 text-white text-sm py-2 px-4 font-semibold rounded focus:outline-none focus:shadow-outline h-10"type="submit">
              Continue
            </button>
          </div>
        </form>


      </div>

    </div>
    </div>

<%- include("partials/footer") %>