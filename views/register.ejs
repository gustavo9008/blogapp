<%- include("partials/header") %>

<main class="ui register-back-image">

<div class="login-form-card w-full flex justify-center items-center">
  <!-- ===== modal conatainer ===== -->
  <div class="bg-gray-900 border-2 border-gray-500 rounded register-form-container">
    <!-- ===== modal header ===== -->
    <div class="border-b px-4 py-2 flex justify-between items-center">
      <div>
        <span class="text-sm">
          Already have an account?
        </span>
        <a href="/blogs/login" class="text-sm text-blue-300 hover:text-blue-400 font-semibold">
          Sign in
        </a>
      </div>
    </div>
    <!-- ===== modal body ===== -->
    <div class="p-4">
      <!-- ===== Form to login ===== -->
      <h3>Register</h3>
      <form action="/blogs/register" method="POST">
      <div class="fields">
        <div class="field">
          <label>Name</label>
          <input class="bg-gray-300 focus:bg-gray-100 appearance-none rounded w-full py-2 px-3 text-gray-900 mb-1 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent h-10" type="text" name="name" placeholder="Name" required>
        </div>
        <div class="field">
          <label>Email</label>
          <input class="bg-gray-300 focus:bg-gray-100 appearance-none rounded w-full py-2 px-3 text-gray-900 mb-1 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent h-10" type="email" name="email" placeholder="Email" required>
        </div>
        <div class="field">
          <label>Username</label>
          <input class="bg-gray-300 focus:bg-gray-100 appearance-none rounded w-full py-2 px-3 text-gray-900 mb-1 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent h-10" type="text" name="username" placeholder="Username" required>
        </div>
        <div class="field">
          <label>Password</label>
          <input class="bg-gray-300 focus:bg-gray-100 appearance-none rounded w-full py-2 px-3 text-gray-900 mb-1 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent h-10" type="password" name="password" placeholder="Password" required>
        </div>
      </div>
      <button class="w-full bg-gray-800 hover:bg-grey-900 text-white text-sm py-2 px-4 font-semibold rounded focus:outline-none focus:shadow-outline h-10"type="submit">Submit</button>
  </form>
      


    </div>

  </div>
  </div>
</main>

  <%- include("partials/footer") %>